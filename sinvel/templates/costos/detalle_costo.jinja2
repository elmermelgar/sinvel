{% extends "../layout.jinja2" %}

<!-- CSS -->
{% block styles %}
    <link href="{{ request.static_url('sinvel:static/css/wizard.css') }}" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="{{ request.static_url('sinvel:static/css/select2.min.css') }}">
    <link rel="stylesheet" type="text/css"
          href="{{ request.static_url('sinvel:static/css/bootstrap-datetimepicker.min.css') }}">
{% endblock styles %}


{% block content %}
    {% from '_helpers.jinja2' import input,label %}
    <div class="col-12 col-lg-12 col-sm-9 ">
    <div class="panel panel-primary">
    <div class="t-header">
        <div class="th-title">Detalle Costos
            <small>Costos del ciclo de vida del auto registrados</small>
        </div>
    </div>
    {% if det_cos[0].tipo_costo.COD_COSTO=='004' %}

        <div class="panel-body">
        <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <h3>{{ label('Descripcion:','col-sm-10 control-label') }}</h3>
                <div class="form-group col-md-10">
                    <td>{{ det_cos[0].DESCRIP_COSTO|default('',true) }}</td>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <h3>{{ label('Tipo Costo','col-sm-10 control-label') }}</h3>
                <div class="form-group col-md-10">
                    <td>{{ det_cos[0].tipo_costo.TIPO_COSTO }}</td>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <h3>{{ label('Taller','col-sm-10 control-label') }}</h3>
                <div class="form-group col-md-10">
                    <td>{{ det_cos[2].taller.NOMBRE_TALLER }}</td>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <h3> {{ label('Tipo Reparacion:','col-sm-10 control-label') }}</h3>
                <div class="form-group col-md-10">
                    <td>{{ det_cos[2].taller.tipo_reparacion.TIPO_REPARACION }}</td>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <h3> {{ label('Estado reparaci√≥n:','col-sm-10 control-label') }}</h3>
                <div class="form-group col-md-10">
                    <td>{{ det_cos[2].ESTADO_REP }}</td>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <h3> {{ label('Monto','col-sm-10 control-label') }}</h3>
                <div class="form-group col-md-10">
                    <td>{{ det_cos[0].MONTO }}</td>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <h3> {{ label('Fecha costo','col-sm-10 control-label') }}</h3>
                <div class="form-group col-md-10">
                    <td>{{ det_cos[0].FECHA_COSTO.strftime("%d/%m/%Y") }}</td>
                </div>
            </div>
        </div>
    {% else %}

        <div class="panel-body">
        <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <h3>{{ label('Descripcion:','col-sm-10 control-label') }}</h3>
                <div class="form-group col-md-10">
                    <td>{{ det_cos[0].DESCRIP_COSTO|default('',true) }}</td>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <h3>{{ label('Tipo Costo','col-sm-10 control-label') }}</h3>
                <div class="form-group col-md-10">
                    <td>{{ det_cos[0].tipo_costo.TIPO_COSTO }}</td>
                </div>
            </div>
        </div>


        <div class="col-md-6">
            <div class="form-group">
                <h3> {{ label('Monto','col-sm-10 control-label') }}</h3>
                <div class="form-group col-md-10">
                    <td>{{ det_cos[0].MONTO }}</td>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <h3> {{ label('Fecha costo','col-sm-10 control-label') }}</h3>
                <div class="form-group col-md-10">
                    <td>{{ det_cos[0].FECHA_COSTO.strftime("%d/%m/%Y") }}</td>
                </div>
            </div>
        </div>
    {% endif %}
<div class="row">
    <div class="col-sm-12">
        <a href="{{ request.route_url('costo_veh',id_vehiculo=id_vehicu) }}" class="form-control btn bg-lightblue"
           style="float: right; margin-right: 50px; width: auto;">
            Atras <i class="zmdi zmdi-arrow-back"></i>
        </a>
    </div>
</div>


</div>
</div>
</div>

{% endblock content %}

{% block scripts %}

    <script type="text/javascript" src="{{ request.static_url('sinvel:static/js/select2.min.js') }}"></script>
    <script type="text/javascript" src="{{ request.static_url('sinvel:static/js/moment.js') }}"></script>
    <script type="text/javascript"
            src="{{ request.static_url('sinvel:static/js/bootstrap-datetimepicker.min.js') }}"></script>

    <script type="text/javascript">
        $(function () {
            $(".form_datetime").datetimepicker({format: 'YYYY-MM-DD'});
        });
    </script>
    <script src="{{ request.static_url('sinvel:static/js/wizard.js') }}"></script>

{% endblock scripts %}