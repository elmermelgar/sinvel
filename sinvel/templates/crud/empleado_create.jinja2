{% extends "../layout.jinja2" %}

<!-- CSS -->
{% block styles %}
    <link href="{{ request.static_url('sinvel:static/css/wizard.css') }}" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="{{ request.static_url('sinvel:static/css/select2.min.css') }}">
    <link rel="stylesheet" type="text/css"
          href="{{ request.static_url('sinvel:static/css/bootstrap-datetimepicker.min.css') }}">
{% endblock styles %}


{% block content %}
    {% from '../_helpers.jinja2' import input,label %}
 <div class="col-12 col-lg-12 col-sm-9 ">
         <div class="panel panel-primary">
            <div class="panel-heading">
                 <h2 class="panel-title">Agregar Empleado</h2>
            </div>


            <div class="panel-body">
                <form class="form-horizontal" action="{{request.route_url('guardar_empleado')}}" method="post">
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                {{ label('Nombre','col-sm-3  control-label') }}
                                <div class="form-group col-md-8">
                                 <input name="NOMBRE" type="text" maxlength="30" class="form-control"  required>
                                 </div>
                            </div>
                       </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ label('Apellido','col-sm-3  control-label') }}
                                <div class="form-group col-md-8">
                                    <input name="APELLIDO" type="text" maxlength="30" class="form-control"  required>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                {{ label('Genero','col-sm-3  control-label') }}
                           <div class="form-group col-md-8">
                                <select name="GENERO" class="form-control ">
                                <option value="">Seleccione un genero </option>
                                 <option value="M">Masculino</option>
                                  <option value="F">Femenino</option>

                            </select>
                            </div>
                         </div>
                      </div>
                               <div class="col-md-6">
                                <div class="form-group">

                                    {{ label('Fecha nacimiento','col-sm-3  control-label') }}
                                <div class="form-group col-md-8">
                                   <input class="form-control form_datetime" name="FECHA_NACIMIENTO" type="text"   placeholder="yyyy-mm-dd"  required>
                                </div>
                                </div>
                     </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ label('DUI','col-sm-3  control-label') }}
                             <div class="form-group col-md-8">
                                <input name="DUI" type="text" maxlength="9" class="form-control"  required>

                             </div>
                             </div>
                         </div>

                       <div class="col-md-6">
                           <div class="form-group">
                                {{ label('NIT','col-sm-3  control-label') }}
                              <div class="form-group col-md-8">
                                <input name="NIT" type="text" maxlength="15" class="form-control" >
                              </div>
                            </div>
                         </div>
                        <div class="col-md-6">
                           <div class="form-group">
                                {{ label('AFP','col-sm-3  control-label') }}
                              <div class="form-group col-md-8">
                                 <input name="AFP" type="text" maxlength="15" class="form-control"  required>
                              </div>
                           </div>
                          </div>


                        <div class="col-md-6">
                           <div class="form-group">
                                {{ label('ISSS','col-sm-3  control-label') }}
                             <div class="form-group col-md-8">
                                <input name="ISSS" type="text" maxlength="15" input type="text" class="form-control input-mask" data-mask="0000-0000" >
                              </div>
                            </div>
                         </div>


                        <div class="col-md-6">
                            <div class="form-group">
                                    {{ label('Telefono','col-sm-3 control-label') }}
                                <div class="form-group col-md-8">
                                <input name="TEL_EMP" type="text" maxlength="10" class="form-control" required>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-6">
                            <div class="form-group">
                                    {{ label('Tipo empleado ','col-sm-3 control-label') }}
                                <div class="form-group col-md-8">
                                <select name="TIPO_EMPLEADO" class="form-control ">
                                <option value="">Seleccione un tipo empleado</option>
                                 <option value="BODEGUERO">Bodeguero</option>
                                  <option value="VENDEDOR">Vendedor</option>
                                  <option value="MOTORISTA">Motorista</option>
                                  <option value="ADMINISTRADOR">Administrador</option>

                            </select>
                            </div>
                            </div>

                        </div>

                           <div class="col-md-12">
                            <div class="form-group">
                                    {{ label('Bodega ','col-md-2 control-label') }}
                                <div class="form-group col-md-4">
                                <select name="ID_BODEGA" class="form-control ">
                                <option value="">Seleccione una bodega</option>
                                    {% for bodega in bodegas %}
                                 <option value="{{ bodega.ID_BODEGA }}">{{  bodega.NOMBRE_BODEGA}}</option>
                                    {% endfor %}

                            </select>
                            </div>
                            </div>

                        </div>





                          <div class="panel">
                 <h3 class="panel-title">Datos usuario</h3>
            </div>
             </br>
                          <div class="col-md-6">
                            <div class="form-group">
                                    {{ label('Username','col-sm-3 control-label') }}
                                <div class="form-group col-md-8">
                                <input name="username" type="text" maxlength="10" class="form-control" >
                                </div>
                            </div>
                        </div>
                          <div class="col-md-6">
                            <div class="form-group">
                                    {{ label('Correo','col-sm-3 control-label') }}
                                <div class="form-group col-md-8">
                                <input name="email" type="email" class="form-control" >
                                </div>
                            </div>
                        </div>


                        </div>


                 <div class="col-sm-2">
                        {{ input('submit','form-control btn btn-primary', type='submit',value='Guardar') }}
                 </div>
                 <div class="col-sm-2">
                 <input  type="reset" class="form-control">
                </div>
                </form>

         </div>
         </div>



 </div>
 {% endblock content %}

{% block scripts %}

    <script type="text/javascript" src="{{ request.static_url('sinvel:static/js/select2.min.js') }}"></script>
    <script type="text/javascript" src="{{ request.static_url('sinvel:static/js/moment.js') }}"></script>
    <script type="text/javascript"
            src="{{ request.static_url('sinvel:static/js/bootstrap-datetimepicker.min.js') }}"></script>

    <script type="text/javascript">
        $(function () {
            $(".form_datetime").datetimepicker({format: 'YYYY-MM-DD'});
        });
    </script>
    <script src="{{ request.static_url('sinvel:static/js/wizard.js') }}"></script>

{% endblock scripts %}